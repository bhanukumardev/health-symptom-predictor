# ============================================
# Backend Environment Variables - Example
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-secret-key-here-generate-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
DEBUG=True

# ============================================
# ML MODEL
# ============================================
MODEL_PATH=../ml-model/models/disease_predictor.pkl

# ============================================
# GROQ LLM API (Required for AI Chatbot)
# ============================================
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here

# ============================================
# OPTIONAL: EMAIL CONFIGURATION (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# OPTIONAL: REDIS (for caching)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# POSTGRESQL CONFIGURATION (Alternative format)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_DB=health_predictor
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
